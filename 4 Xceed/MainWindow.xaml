<Window 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_4_Xceed"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" x:Class="_4_Xceed.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded1">

    <Grid Margin="0,2,46,2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label x:Name="ColorLabel" Content="Your Previous Color" HorizontalAlignment="Left" Margin="40,45,0,0" VerticalAlignment="Top" Height="50" Width="225"/>
        <Button x:Name="Button1" Click="Save_Click" Content="Save" HorizontalAlignment="Left" Margin="305,45,0,0" VerticalAlignment="Top" Width="170" Height="50"/>

        <xctk:ColorPicker x:Name="ClrPcker" SelectedColorChanged="ClrPcker_SelectedColorChanged" HorizontalAlignment="Left" Margin="65,180,0,0" VerticalAlignment="Top" Height="65" Width="325"/>

    </Grid>
</Window>
